<UserControl x:Class="PokeManager.PokeManagement.PokeManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PokeManager.PokeManagement"
             xmlns:converter="clr-namespace:PokeManager.PokeManagement.Converter"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.DataContext>
        <local:PokeManagementViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <converter:GreaterThanOneConverter x:Key="GreaterThanOneConverter" />
        <converter:CanGoNextConverter x:Key="CanGoNextConverter" />
        <converter:TypeListToStringConverter x:Key="TypeListToStringConverter" />
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:InverseBoolConverter x:Key="InverseBooleanConverter" />
        <converter:AndBoolConverter x:Key="AndBoolConverter" />


    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Pokémon Management">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                        <TextBlock Text="Alle Pokémons" FontWeight="Bold" Margin="0,0,0,5" />

                        <TextBox Margin="0,0,0,10"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Text="{Binding LoadingPercentageText}"
                                   Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                   FontStyle="Italic" Foreground="Gray" />

                        <ListBox ItemsSource="{Binding FilteredPokemons}"
                                 SelectedItem="{Binding SelectedPokemon}" Height="300">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Text=" | " VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding Types, Converter={StaticResource TypeListToStringConverter}}"
                                            VerticalAlignment="Center" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Orientation="Horizontal">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                            Margin="0,0,20,0">
                                    <TextBlock Text="Zeilen pro Seite: " VerticalAlignment="Center" Margin="0,0,5,0" />
                                    <ComboBox Width="70"
                                              SelectedValue="{Binding PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Content"
                                              VerticalAlignment="Center"
                                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                                        <ComboBoxItem Content="500" />
                                        <ComboBoxItem Content="1000" />
                                        <ComboBoxItem Content="1500" />
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <Button Content="&lt; Zurück"
                                            Command="{Binding PreviousPageCommand}"
                                            Margin="0,0,10,0">
                                        <Button.IsEnabled>
                                            <MultiBinding Converter="{StaticResource AndBoolConverter}">
                                                <Binding Path="CurrentPage"
                                                         Converter="{StaticResource GreaterThanOneConverter}" />
                                                <Binding Path="IsLoading"
                                                         Converter="{StaticResource InverseBooleanConverter}" />
                                            </MultiBinding>
                                        </Button.IsEnabled>
                                    </Button>

                                    <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" />
                                    <TextBlock Text=" / " VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="0,0,10,0" />

                                    <Button Content="Weiter &gt;"
                                            Command="{Binding NextPageCommand}">
                                        <Button.IsEnabled>
                                            <MultiBinding Converter="{StaticResource CanGoNextConverter}">
                                                <Binding Path="CurrentPage" />
                                                <Binding Path="TotalPages" />
                                                <Binding Path="IsLoading" />
                                            </MultiBinding>
                                        </Button.IsEnabled>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <Button Content="Zu Lager 1 Hinzufügen"
                                Command="{Binding AddToPlayer1StorageCommand}"
                                Margin="0,10,0,0" />
                        <Button Content="Zu Lager 2 Hinzufügen"
                                Command="{Binding AddToPlayer2StorageCommand}"
                                Margin="0,10,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                        <TextBlock Text="Tinas Pokémon Team" FontWeight="Bold" Margin="0,0,0,5" />
                        <ListBox ItemsSource="{Binding Player1.Team}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Text=" | " VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding Types, Converter={StaticResource TypeListToStringConverter}}"
                                            VerticalAlignment="Center" />
                                        <Button Content="&lt;-"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.MoveToStorageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="X"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.RemoveFromListCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                        <TextBlock Text="Tinas Pokémon Lager" FontWeight="Bold" Margin="0,0,0,5" />
                        <ListBox ItemsSource="{Binding Player1.Storage}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Text=" | " VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding Types, Converter={StaticResource TypeListToStringConverter}}"
                                            VerticalAlignment="Center" />
                                        <Button Content="-&gt;"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.MoveToTeamCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="X"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.RemoveFromListCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="10,0,0,0">
                        <TextBlock Text="Nicks Pokémon Team" FontWeight="Bold" Margin="0,0,0,5" />
                        <ListBox ItemsSource="{Binding Player2.Team}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Text=" | " VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding Types, Converter={StaticResource TypeListToStringConverter}}"
                                            VerticalAlignment="Center" />
                                        <Button Content="&lt;-"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.MoveToStorageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="X"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.RemoveFromListCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="1" Margin="10,0,0,0">
                        <TextBlock Text="Nicks Pokémon Lager" FontWeight="Bold" Margin="0,0,0,5" />
                        <ListBox ItemsSource="{Binding Player2.Storage}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Text=" | " VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{Binding Types, Converter={StaticResource TypeListToStringConverter}}"
                                            VerticalAlignment="Center" />
                                        <Button Content="-&gt;"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.MoveToTeamCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="X"
                                                DockPanel.Dock="Right"
                                                Command="{Binding DataContext.RemoveFromListCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Sinnoh Orte">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Orte in Sinnoh" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible"
                                  Height="{Binding Height, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl ItemsSource="{Binding SinnohLocations}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsVisited}" Margin="20, 5" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Laden" Width="80" Command="{Binding LoadCommand}" Margin="0,0,5,0"/>
            <Button Content="Speichern" Width="80" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>

</UserControl>